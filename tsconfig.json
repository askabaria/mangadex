
{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@aska/utils": ["libs/@aska/utils/index.ts"],
      "@aska/commands": ["libs/@aska/commands/index.ts"],
      "@manga/arguments": ["libs/@manga/arguments/index.ts"],
      "@manga/commands": ["libs/@manga/commands/index.ts"],
      "@manga/mode-interactive": ["libs/@manga/mode-interactive/index.ts"],
    }
  },
  "files": [
    "src/mangadex.ts"
  ],
  "include": ["src"],
  "exclude": ["node_modules"]
}
